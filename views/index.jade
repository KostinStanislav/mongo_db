doctype html
html(lang="en")
    head(meta charset="UTF-8")
        title=title
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
        link(href="/css/style.css", rel="stylesheet",type='text/css')
    body
        h1    
            |&#9875; What a beautiful table &#9875; :)
    div
        div.table-responsive
            table.table.table-bordered
                thead
                    tr.info
                        th.text-center
                            |ID:
                        th.text-center
                            |Name:
                        th.text-center
                            |Surname:
                        th.text-center
                            |&#9993; Email:
                        th.text-center
                            |Age:
                        th.text-center
                            |Action:
                tbody
                    each item in quotes
                        tr.active
                            td.text-center=item._id
                            td.text-center=item.name
                            td.text-center=item.surname
                            td.text-center=item.email
                            td.text-center=item.age
                            td.text-center
                                a.delete.btn.btn-danger(id=item._id href="#"  role="button")
                                    |&#10008; Delete
                                a.update.btn.btn-primary(id=item._id href="#"  role="button")
                                    |&#9998; Edit
                            
                            
    a.btn.btn-success(href="#spoiler-open-1" id="spoiler-open-1" class="trigger open")
        |&#10010; Add
    a.btn.btn-warning(href="#spoiler-close-1" id="spoiler-close-1" class="trigger close")
        |Hide form
     
    form.spoiler.form-inline(action="/quotes" method="POST")
        input.form-control(type="text" placeholder="name" name="name")
        input.form-control(type="text" placeholder="surname" name="surname")
        input.form-control(type="text" placeholder="email" name="email")
        input.form-control(type="text" placeholder="age" name="age")
        button(class="btn btn-success" type="submit")
            |&#9766; Submit
    script(src="main.js")
                      
